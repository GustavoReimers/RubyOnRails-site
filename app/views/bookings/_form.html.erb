<%= form_for([@room, @booking]) do |f| %>
  <p>
    <%= f.label 'Select Customer:' %>
    <%= f.collection_select :user_id, User.all, :id, :customer_name %>
  </p>
  <p>
    <%= f.label 'start_time', 'Start Date and Time:' %>
    <%= f.datetime_select :start_time, { minute_step: 15 } %>
  </p>
  <p>
    <%= f.label 'length', 'Length of booking in hours:' %>
    <%= f.number_field 'length', min: 1 %>
  </p>
  <p>
    <%= f.label 'Room Price:' %>
    <%= number_to_currency @room.price, unit: "Â£" %>
  </p>
  <p>
  <!-- NOTE(Tom) Because of the set extras we offer is this necessary?? -->
  <%#= f.label 'Type of Extra:' %>
  </p>
  <p>
    <%#= f.label 'Extras:' %>
    <%#= f.collection_select :extra_id, Extra.all, :id, :extra_info, :prompt => 'Choose any extras' %>

    <p>
      <%#= f.fields_for :additions %>
      <%= f.label 'Extras:' %>
      <%= f.collection_check_boxes :extra_ids, Extra.all, :id, :extra_info %>
    </p>
  </p>
  <!-- NOTE(Tom) Was worth a shot -->
  <%= Room.sum(:price) + Extra.sum(:price) %>
  <%= f.submit 'Submit' %>
<% end %>
